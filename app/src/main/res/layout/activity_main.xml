<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/bitwise_launcher_image"
            android:contentDescription="App Logo" />

        <!-- App Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bite Wise"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart nutrition, simplified"
            android:textSize="14sp"
            android:textColor="#8D6E63"
            android:layout_marginBottom="24dp" />

        <!-- Card Container for Actions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginVertical="12dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Scan Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Barcode"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp"
                    app:backgroundTint="#FB8C00"
                    android:textColor="@android:color/white" />

                <!-- View History -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View History"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp"
                    app:backgroundTint="#F57C00"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />

                <!-- Set Food Preferences -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSetKcalLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Preferences"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp"
                    app:backgroundTint="#EF6C00"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />

                <!-- Test Barcode Button (Dev Tool) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTestBarcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Barcode (Dev)"
                    app:iconTint="@android:color/white"
                    app:iconPadding="8dp"
                    app:backgroundTint="#A1887F"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
