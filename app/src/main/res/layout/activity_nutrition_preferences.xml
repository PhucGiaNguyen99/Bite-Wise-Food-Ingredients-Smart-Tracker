<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Daily Preferences"
            android:textSize="24sp"
            android:textColor="#E65100"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:contentDescription="Section title" />

        <!-- Calorie Limit Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Calorie Limit"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/kcalLimitInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. 2000"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:textSize="16sp"
            android:contentDescription="Enter your daily calorie limit" />

        <!-- Allergen Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergy Keywords"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <AutoCompleteTextView
            android:id="@+id/allergenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start typing to select (e.g. peanuts, gluten)"
            android:completionThreshold="1"
            android:inputType="text"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:textSize="16sp"
            android:contentDescription="Enter allergen keywords" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Preferences"
            android:textColor="#FFFFFF"
            android:backgroundTint="#EF6C00"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:contentDescription="Save button" />

    </LinearLayout>
</ScrollView>
